<!doctype html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GreekTransWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GreekTransWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/@@picocss/pico@latest/css/pico.min.css" />
</head>
<body>
    <main class="container">
        <header>
            <nav>
                <ul>
                    <li><strong>Greek Transliteration</strong></li>
                </ul>
                <ul>
                    <li><a asp-controller="Home" asp-action="Trans">Transliter</a></li>
                    <li><a asp-controller="Home" asp-action="Test">Test</a></li>
                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                </ul>
            </nav>
        </header>
        <!-- <main role="main" class="pb-3">-->
        @RenderBody()


        <footer>
            <hr />
            <div class="container">
                GreekTrans 是一个开源的希腊文罗马化软件 - <a asp-controller="Home" asp-action="About">About</a>
            </div>
        </footer>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
